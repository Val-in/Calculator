<Window x:Class="WPF_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Calculator"
        mc:Ignorable="d"
        Title="Calculator" Height="350" Width="250"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">
    
    <Grid x:Name="MainRoot" Background= "Lavender">
       
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" x:Name="Input">
            
        </TextBlock>
        <Button Grid.Row="1" Grid.Column="0" 
                Content="1" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="1" Grid.Column="1" 
                Content="2" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="1" Grid.Column="2" 
                Content="3" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="1" Grid.Column="3" 
                Content="+" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="2" Grid.Column="1" 
                Content="5" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="2" Grid.Column="0" 
                Content="4" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="2" Grid.Column="3" 
                Content="-" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="2" Grid.Column="2" 
                Content="6" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="3" Grid.Column="1" 
                Content="8" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="3" Grid.Column="0" 
                Content="7" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="3" Grid.Column="2" 
                Content="9" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="3" Grid.Column="3" 
                Content="*" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="4" Grid.Column="1" 
                Content="=" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="4" Grid.Column="0" 
                Content="0" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="4" Grid.Column="3" 
                Content="/" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        <Button Grid.Row="4" Grid.Column="2" 
                Content="AC" 
                Background="LightBlue" 
                Foreground="White" 
                FontSize="16" />
        
        
    </Grid>
</Window>
